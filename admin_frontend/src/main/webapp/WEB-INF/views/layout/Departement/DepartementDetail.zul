<zk>

    <window width="auto" border="none"
            apply="admin.fe.controller.Maintenance.Departement.DepartementDetailController">

        <div>
            <grid>
                <rows>
                    <row>
                        <label value = "Division Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idDivision"  disabled="true"/>
                            </hlayout>
                            <div>
                                <button id ="btnDivSearch"/>
                            </div>
                        </hbox>
                    </row>
                    <row>
                        <label value = "Departement Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idDepartement" constraint="no empty, /^[a-zA-Z@''.]+\s?[a-zA-Z@''.]+$/:there is an illegal character or has a white space"/>
                            </hlayout>
                        </hbox>


                    </row>
                    <row>
                        <label value = "Departement Name:" />
                        <hbox>
                            <hlayout>
                                <textbox id="nameDepartement" constraint="no empty, /^[a-zA-Z@''.]+\s?[a-zA-Z@''.]+$/:there is an illegal character or has a white space"/>
                            </hlayout>
                        </hbox>

                    </row>

                </rows>
            </grid>
            <div align="right" style="margin-top:30px">
                <button id="submitButton" label="Submit" style="float::right"/>
                <button id="clearButton" label="Clear" style="float::right"/>
                <button id="cancelButton" label="Cancel" style="float::right"/>
            </div>

        </div>

    </window>
</zk>