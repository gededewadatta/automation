<zk>

    <window width="auto" border="none"
            apply="admin.fe.controller.Maintenance.Grade.GradeEditController">

        <div>
            <grid>
                <rows>
                    <row>
                        <label value = "Division Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idDivision" disabled="true"/>
                            </hlayout>
                            <hlayout visible="false">
                                <textbox id="idGradeId" />
                            </hlayout>
                            <hlayout visible="false">
                                <textbox id="idSubGradeId" />
                            </hlayout>
                            <div>
                                <button id ="btnDivision"/>
                            </div>
                        </hbox>
                    </row>
                    <row>
                        <label value = "Department Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idDepartment" disabled="true" />
                            </hlayout>
                            <div>
                                <button id ="btnDepartment"/>
                            </div>
                        </hbox>


                    </row>
                    <row>
                        <label value = "Grade Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idGrade"  disabled="true" />
                            </hlayout>
                        </hbox>

                    </row>

                    <row>
                        <label value = "Sub Grade Code:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idSubGrade" disabled="true"/>
                            </hlayout>
                        </hbox>

                    </row>

                    <row>
                        <label value = "Grade Name:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idGradeName" constraint="no empty, /^[a-zA-Z@''.]+\s?[a-zA-Z@''.]+$/:there is an illegal character or has a white space"  />
                            </hlayout>
                        </hbox>

                    </row>

                    <row>
                        <label value = "Sub Grade Name:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idSubGradeName" constraint="no empty, /^[a-zA-Z@''.]+\s?[a-zA-Z@''.]+$/:there is an illegal character or has a white space" />
                            </hlayout>
                        </hbox>

                    </row>
                </rows>
            </grid>
            <div align="right" style="margin-top:30px">

                <button id="submitButton" label="Submit" style="float::right"/>
                <button id="clearButton" label="Clear" style="float::right"/>
                <button id="cancelButton" label="Cancel" style="float::right"/>

            </div>

        </div>

    </window>
</zk>