<zk>

    <window width="auto" border="none"
            apply="admin.fe.controller.Maintenance.Division.DivisionDetailController">

        <div>
            <grid>
                <rows>
                    <row>
                        <label value = "Division:" />
                        <hbox>
                            <hlayout>
                                <textbox id="idDivision"/>
                            </hlayout>
                        </hbox>
                    </row>
                    <row>
                        <label value = "Division Name:" />
                        <hbox>
                            <hlayout>
                                <textbox id="nameDivision"/>
                            </hlayout>
                        </hbox>
                    </row>

                </rows>
            </grid>
            <div align="right" style="margin-top:30px">
                <button id="submitButton" label="Submit" style="float::right"/>
                <button id="clearButton" label="Clear" style="float::right"/>
            </div>

        </div>

    </window>
</zk>