<zk>
    <window id="questionWindow" width="auto" border="none"
    apply="admin.fe.controller.Maintenance.Question.QuestionSearchController">
        <div>
            <grid>
                <rows>
                    <row>
                        <label value="Grade Code" />
                        <hbox>
                            <hlayout>
                                <textbox id="idGradeCode" disabled="true" />
                            </hlayout>
                            <div>
                                <button id="btnGrade" />
                            </div>
                        </hbox>
                    </row>

                    <row>
                        <label value="Competency" />
                        <hbox>
                            <hlayout>
                                <textbox id="idCompetency" disabled="true" />
                            </hlayout>
                            <div>
                                <button id="btnCompetencyCode" />
                            </div>
                        </hbox>
                    </row>
                </rows>
            </grid>

            <div align="center" style="margin-top:10px">
                <button id="searchButton" label="Search" style="float::center"/>
                <button id="cancelButton" label="Cancel" style="float::center"/>
            </div>

            <vbox>
                <grid id="hGrid"  mold="paging" pageSize="4" style="margin-top:10px">
                    <columns>
                        <column label="Departement" align="center"/>
                        <column label="Grade" align="center"/>
                        <column label="Competency" align="center"/>
                        <column label="Question" align="center"/>
                        <column label="Correct Answer" align="center"/>
                        <column label="Action"  align="center"/>
                    </columns>
                </grid>
            </vbox>

            <div align="center" style="margin-top:10px">
                <button id="addButton" label="Add" style="float::center"/>
            </div>
        </div>
    </window>
</zk>