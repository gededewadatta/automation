<zk>

    <window width="auto" border="none"
            apply="admin.fe.controller.Maintenance.Competencies.CompetenciesDetailController">

        <div>
            <grid>
                <rows>
                    <row>
                        <label value = "Department:" />
                        <hbox>
                            <hlayout>
                                <label id="idDepartment"  />
                            </hlayout>
                            <div>
                                <button/>
                            </div>
                        </hbox>
                    </row>
                    <row>
                        <label value = "Grade:" />
                        <hbox>
                            <hlayout>
                                <label id="idGrade"  />
                            </hlayout>
                            <div>
                                <button/>
                            </div>
                        </hbox>


                    </row>
                    <row>
                        <label value = "Sub Grade:" />
                        <hbox>
                            <hlayout>
                                <label id="idSubGrade"  />
                            </hlayout>
                        </hbox>

                    </row>

                    <row>
                        <label value = "Competencies:" />
                        <hbox>
                            <hlayout>
                                <label id="idCompetencies"  />
                            </hlayout>
                        </hbox>

                    </row>
                </rows>
            </grid>
            <div align="right" style="margin-top:60px">

                <button id="backButton" label="Back" style="float::right"/>

            </div>

        </div>

    </window>
</zk>